[alias]
	s = status
	ps = push
	p = pull
	st = stash
	co = checkout
	ci = commit
	b = branch
	d = diff
	dc = diff --cached
	l = log
	lg = log --graph --date=short --decorate --oneline
	logdiff = log -p
	short = log --pretty=format:\"%h %cr %cn %Cgreen%s%Creset\"
	lastday = log --author=mateusg --oneline --all --since=1.day
	lastfri = log --author=mateusg --oneline --all --since='last Fri'
	rb = rebase
	shame = blame
[color]
	ui = true
